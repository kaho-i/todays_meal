<table class="table col-11 mx-auto">
  <thead>
    <tr class="row">
      <th class="col-1 offset-1"></th>
      <th class="col-2">名前</th>
      <th class="col-2">日付</th>
      <th class="col-2">人数</th>
      <th class="col-2">ステータス</th>
      <th class="col-2"></th>
    </tr>
  </thead>
  <tbody>
    <% reservations.each do |reservation| %>
      <% if reservation.status != 'before_reservation' %>
        <tr class="row" style="background-color: #808080">
          <td class="col-1 offset-1"><%= link_to '>', shop_reservation_path(reservation),style: 'color: white' %></td>
      <% else %>
        <tr class="row">
          <td class="col-1 offset-1"><%= link_to '>', shop_reservation_path(reservation) %></td>
      <% end %>
          <td class="col-2"><%= reservation.name %></td>
          <td class="col-2"><%= reservation.date %></td>
          <td class="col-2"><%= reservation.member %></td>
          <td class="col-2">
            <% if reservation.status == 'before_reservation' %>
              <p style="color: green"><%= reservation.status_i18n %></p>
            <% elsif reservation.status == 'cancel' %>
              <p style="color: white"><%= reservation.status_i18n %></p>
            <% elsif reservation.status == 'completed' %>
              <p style="color: black"><%= reservation.status_i18n %></p>
            <% end %>
          </td>
          <td class="col-2"><%= link_to '編集画面へ', edit_shop_reservation_path(reservation),class: 'btn btn-block btn-info' %></td>
        </tr>
    <% end %>
  </tbody>
</table>