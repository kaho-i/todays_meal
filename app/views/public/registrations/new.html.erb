<!--h4>User#regisdivations</h4-->
<div class="container">
  <div class="row my-3">
    <h2>新規登録</h2>
  </div>
  <%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class="row mb-2">
    <div class="offset-1 col-1 px-0"><%= f.label :family_name,"名字" %></div>
    <div class="offset-1 col-3"><%= f.text_field :family_name,placeholder: "令和",style: "width: 100%" %></div>
    <div class="col-1 pr-0"><%= f.label :first_name,"名前" %></div>
    <div class="col-3"><%= f.text_field :first_name,placeholder: "道子",style: "width: 100%" %></div>
  </div>
  <div class="row mb-2">
    <div class="offset-1 col-2 px-0"><%= f.label :name, "ユーザー名" %></div>
    <div class="col-7"><%= f.text_field :name,autofocus: true, placeholder: 'ニックネームを入力してください',style: 'width:100%' %></div>
  </div>
  <div class="row mb-2">
    <div class="offset-1 col-2 px-0"><%= f.label :email,"メールアドレス" %></div>
    <div class="col-7"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@exsample.com',style: 'width: 100%' %></div>
  </div>
  <div class="row mb-2">
    <div class="offset-1 col-2 px-0">
      <%= f.label :password,"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-7"><%= f.password_field :password, autocomplete: "new-password",style:'width: 100%' %></div>
  </div>
  <div class="row mb-4">
    <div class="offset-1 col-2 px-0"><%= f.label :password_confirmation,"パスワード(確認用)" %></div>
    <div class="col-7"><%= f.password_field :password_confirmation, autocomplete: "new-password",style: 'width:100%' %></div>
  </div>
  <div class="row mb-3">
    <div class="col-3 offset-3"><%= f.submit "新規登録",class:'btn btn-block btn-success' %></div>
  </div>
  <% end %>

  <div class="row mt-5">
    <%= render "public/shared/links" %>
  </div>
</div>