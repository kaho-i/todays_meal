<table class="col-11 mx-auto">
  <tbody>
    <% post.comments.each do |comment| %>
    <tr class='row mb-2'>
      <td class='col-1 offset-1'>
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size: "50x50" %>
        <% end %>
      </td>
      <td class='col-1'><%= link_to comment.user.name, user_path(comment.user) %></td>
      <td class='col-6'><%= comment.body %></td>
      <% if comment.user == current_user || current_user == post.user %>
        <td class='col-2'>
          <!--%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %-->
          <%= link_to "削除する", post_comment_path(post, comment), method: :delete, class: "btn btn-danger", remote: true %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>