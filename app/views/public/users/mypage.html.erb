<div class="container">
  <div class="row my-3">
    <h2><%= @user.name %>さんのマイページ</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="col-10 mx-auto mb-3">
        <%= image_tag @user.get_profile_image, size: "150x150" %>
      </div>
      <%= render 'info',user: @user %>
      <%= render 'btn', user: @user %>
    </div>
    <div class="col-8">
      <h4><%= @user.name %>さんの投稿一覧</h4>
      <%= render 'public/posts/post', posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>