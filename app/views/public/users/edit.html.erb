<!--h1>Public::Users#edit</h1-->
<div class="container">
  <div class="row my-3">
    <h2>ユーザー情報編集画面</h2>
  </div>
  
  <div class="container col-10 mx-auto">
    <%= form_with model: @user, local:true do |f| %>
      <div class="row mb-2">
        <div class="col-3">プロフィール画像</div>
        <div class="col-7"><%= f.file_field :profile_image, class: "w-100 py-1", type: 'file', accept: 'image/*' %></div>
      </div>
      <div class="row mb-2">
        <div class="col-3">メールアドレス</div>
        <div class="col-7"><%= f.email_field :email, autofocus: true, class: "form-control w-100 px-2 py-1", autocomplete: "email" %></div>
      </div>
      <div class="row mb-2">
        <div class="col-3">名字</div>
        <div class="col-3"><%= f.text_field :family_name, class: "form-control px-2 py-1 w-100" %></div>
        <div class="col-1">名前</div>
        <div class="col-3"><%= f.text_field :first_name, class: "form-control px-2 py-1 w-100" %></div>
      </div>
      <div class="row mb-2">
        <div class="col-3">ニックネーム</div>
        <div class="col-7"><%= f.text_field :name, class: "form-control w-100 px-2 py-1" %></div>
      </div>
      <div class="row mb-4">
        <div class="col-3">自己紹介文</div>
        <div class="col-7"><%= f.text_field :introduction, placeholder: '自己紹介文を入力してください(任意)', class: "form-control w-100 px-2 py-1" %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-1"><%= f.submit '変更を保存する', class: 'btn btn-block btn-success' %></div>
        <div class="col-3 offset-1"><%= link_to '変更を破棄する', mypage_path, class:'btn btn-block btn-danger' %></div>
      </div>
    <% end %>
  </div>
</div>