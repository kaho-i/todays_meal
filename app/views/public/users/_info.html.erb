<table class="container col-10 mx-auto">
  <tr class="row mb-2">
    <th class="col-3">名前</th>
    <td class="col-8"><%= user.name %></td>
  </tr>
  <% unless current_user.guest_user? %>
    <% if user == current_user %>
      <tr class="row mb-2">
        <th class="col-3">名字</th>
        <td class="col-3"><%= user.family_name %></td>
        <th class="col-3">名前</th>
        <td class="col-3"><%= user.first_name %></td>
      </tr>
    <% end %>
  <% end %>
  <tr class="row mb-4">
    <th class="col-3">一言</th>
    <td class="col-8"><%= user.introduction %></td>
  </tr>
</table>