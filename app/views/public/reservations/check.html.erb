<!--h1>Public::Reservations#check</h1-->
<div class='container'>
  <div class='row my-3'>
    <h2>予約確認画面</h2>
  </div>
  <table class="container col-8 mx-auto">
    <%= form_with url: reservations_path, method: :post do |f| %>
    <tbody>
      <tr class="row">
        <td class="col-2 offset-1">予約店舗</td>
        <td class="col-5 offset-1"><%= @restrant.name %></td>
        <%= hidden_field_tag 'reservation[restrant_name]', @restrant_id %>
      </tr>
      <tr class="row">
        <td class="col-2 offset-1">予約日時</td>
        <td class="col-5 offset-1"><%= @select_date %></td>
        <%= hidden_field_tag 'reservation[new_date]', @select_date %>
      </tr>
      <tr class="row">
        <td class="col-2 offset-1">予約人数</td>
        <td class="col-5 offset-1"><%= @member %>人</td>
        <%= hidden_field_tag 'reservation[new_member]', @member %>
      </tr>
      <tr class="row mb-4">
        <td class="col-2 offset-1">代表者名</td>
        <td class="col-5 offset-1"><%= @user.family_name%><%= @user.first_name %></td>
      </tr>
    </tbody>
  </table>
  <div class="row col-10 mx-auto">
    <div class="col-3 offset-1">
      <%= f.submit '予約を確定させる', class: 'btn btn-block btn-success' %>
    </div>
    <div class="col-3 offset-1">
      <%= link_to '予約を修正する', new_reservation_path(@restrant) , class: 'btn btn-block btn-danger' %>
    </div>
  </div>
  <% end %>
</div>
