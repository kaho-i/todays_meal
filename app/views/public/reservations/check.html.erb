<!--h1>Public::Reservations#check</h1-->
<div class='container'>
  <div class='row my-3'>
    <h2>予約確認画面</h2>
  </div>
  <table class="container">
  <%= form_with model: @reservation, url: reservations_path, method: :post do |f| %>
    <tbody>
      <tr class="row">
      <td class="offset-1 col-2">予約店舗</td>
      <td class="col-7"><%= @restrant.name %></td>
    </tr>
    <tr class="row">
      <td class="offset-1 col-2">予約日時</td>
      <td class="col-7"><%= @select_date %></td>
    </tr>
    <tr class="row">
      <td class="offset-1 col-2">予約人数</td>
      <td class="col-7"><%= @member %>人</td>
    </tr>
    <tr class="row">
      <td class="offset-1 col-2">代表者名</td>
      <td class="col-7"><%= @representative %></td>
    </tr>
    <tr class="row">
      <td class="col-3 offset-2">
        <%= f.submit '予約を確定させる', class: 'btn btn-block btn-success' %>
      </td>
      <td class="col-3">
        <%= link_to '予約を修正する', new_reservation_path(@restrant) , class: 'btn btn-block btn-danger' %>
      </td>
    </tr>
    </tbody>
  <% end %>
  </table>
</div>
