<!--h4>Users#sessions</h4-->
<div class="container">
  <div class="row my-3">
    <h2>ログイン</h2>
  </div>
  <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>
  <div class="row my-2">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class="container">
    <div class="row mb-2">
      <div class="offset-1 col-3"><%= f.label :email,"メールアドレス" %></div>
      <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@exsample.com',style: 'width:100%' %></div>
    </div>
    <div class="row mb-4">
      <div class="offset-1 col-3"><%= f.label :password,"パスワード" %></div>
      <div class="col-6"><%= f.password_field :password, autocomplete: "current-password", style:'width:100%' %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-3"><%= f.submit "ログイン", class: 'btn btn-block btn-info' %></div>
    </div>
  </div>
  <% end %>
  <div class="row mt-5">
    <%= render "public/shared/links" %>
  </div>
</div>